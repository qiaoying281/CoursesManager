@model KhoaHocOnline.Models.EF.Exam
@{
    ViewBag.Title = "Add new Exam";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Exam" class="nav-link">List</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Exam/add" class="nav-link">Add</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add new exam</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/Exam">List</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Add new exam</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "Exam", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="InputCoursePartID">Course Part ID</label>
                            @Html.TextBoxFor(x => x.CoursePartID, new { @class = "form-control", @placeholder = "Course Part ID" })
                            @Html.ValidationMessageFor(x => x.CoursePartID, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="InputExamTypeID">Exam Type ID</label>
                            @Html.TextBoxFor(x => x.ExamTypeID, new { @class = "form-control", @placeholder = "Exam Type ID" })
                            @Html.ValidationMessageFor(x => x.ExamTypeID, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="InputExamName">Exam Name</label>
                            @Html.TextBoxFor(x => x.ExamName, new { @class = "form-control", @placeholder = "Exam Name" })
                            @Html.ValidationMessageFor(x => x.ExamName, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="InputDescription">Description</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Content", @id = "txtDescription" })
                            @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="InputWorkTime">Work Time</label>
                            @Html.TextBoxFor(x => x.WorkTime, new { @class = "form-control", @placeholder = "Work Time" })
                            @Html.ValidationMessageFor(x => x.WorkTime, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="InputDueDate">Due Date</label>
                            @Html.TextBoxFor(x => x.DueDate, new { @class = "form-control", @placeholder = "Due Date" })
                            @Html.ValidationMessageFor(x => x.DueDate, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <a href="/admin/Exam" class="btn btn-danger">Previous</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDescription', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
    </script>
}