@model KhoaHocOnline.Models.EF.Submission
@{
    ViewBag.Title = "Edit new Submission";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Submission" class="nav-link">List</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Submission/Edit" class="nav-link">Edit</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Submission</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/Submission">List</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Edit Submission</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Submission", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.SubmissionID)
                    <!-- your steps content here -->
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="InputExamID">Exam ID</label>
                            @Html.TextBoxFor(x => x.ExamID, new { @class = "form-control", @placeholder = "Exam ID" })
                            @Html.ValidationMessageFor(x => x.ExamID, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="InputStudentID">Student ID</label>
                            @Html.TextBoxFor(x => x.StudentID, new { @class = "form-control", @placeholder = "Student ID" })
                            @Html.ValidationMessageFor(x => x.StudentID, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="InputExamTimes">Exam Times</label>
                            @Html.TextBoxFor(x => x.ExamTimes, new { @class = "form-control", @placeholder = "Exam Times" })
                            @Html.ValidationMessageFor(x => x.ExamTimes, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="InputGrade">Grade</label>
                            @Html.TextBoxFor(x => x.Grade, new { @class = "form-control", @placeholder = "Grade" })
                            @Html.ValidationMessageFor(x => x.Grade, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <a href="/admin/Submission" class="btn btn-danger">Previous</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->