@model KhoaHocOnline.Models.EF.Course
@{
    ViewBag.Title = "Add new course";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/course" class="nav-link">List</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/course/add" class="nav-link">Add</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add new course</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/course">List</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Add new course</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "Course", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->
                <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        <label for="InputCourseName">Course name</label>
                        @Html.TextBoxFor(x => x.CourseName, new { @class = "form-control", @placeholder = "Course name" })
                        @Html.ValidationMessageFor(x => x.CourseName, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="InputCourseDescription">Course Description</label>
                        @Html.TextAreaFor(x => x.CourseDescription, new { @class = "form-control", @placeholder = "Course description", @id = "txtCourseDescription" })
                        @Html.ValidationMessageFor(x => x.CourseDescription, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="InputTutorID">Tutor ID</label>
                        @Html.TextBoxFor(x => x.TutorID, new { @class = "form-control", @placeholder = "Tutor ID" })
                        @Html.ValidationMessageFor(x => x.TutorID, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="InputCost">Cost</label>
                        @Html.TextBoxFor(x => x.Cost, new { @class = "form-control", @placeholder = "Cost" })
                        @Html.ValidationMessageFor(x => x.Cost, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="InputActive">Is Active</label>
                        @Html.CheckBoxFor(x => x.IsActive)
                    </div>
                    <div class="form-group">
                        <label for="InputCourseTypeID">Course Type ID</label>
                        @Html.TextBoxFor(x => x.CourseTypeID, new { @class = "form-control", @placeholder = "Course Type ID" })
                        @Html.ValidationMessageFor(x => x.CourseTypeID, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <a href="/admin/course" class="btn btn-danger">Previous</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>

                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtCourseDescription', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
    </script>
}